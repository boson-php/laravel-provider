{
    "name": "boson-php/laravel-provider",
    "description": "Integration with Laravel/Octane",
    "type": "library",
    "license": "MIT",
    "homepage": "https://bosonphp.com",
    "support": {
        "issues": "https://github.com/boson-php/boson/issues",
        "source": "https://github.com/boson-php/laravel-provider"
    },
    "authors": [
        {
            "name": "Danil Shutsky",
            "email": "thecutcode@gmail.com"
        },
        {
            "name": "Kirill Nesmeyanov",
            "email": "nesk@xakep.ru"
        }
    ],
    "require": {
        "php": "^8.4",
        "laravel/framework": "^10.10.1|^11.0|^12.0",
        "laravel/octane": "^2.9",
        "boson-php/http-static-provider": "^0.15",
        "boson-php/laravel-http-bridge": "^0.15"
    },
    "autoload": {
        "psr-4": {
            "Boson\\Bridge\\Laravel\\Provider\\": "src"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^12.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Boson\\Bridge\\Laravel\\Provider\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.15.x-dev",
            "dev-main": "0.15.x-dev"
        },
        "laravel": {
            "providers": [
                "Boson\\Bridge\\Laravel\\Provider\\LaravelServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "platform-check": true,
        "bin-compat": "full",
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
